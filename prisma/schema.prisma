generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Guest {
  id         String  @id @default(uuid())
  familyName String
  email      String
  phone      String
  address    String
  city       String
  state      String
  zip        String
  partySize  Int?
  rsvpStatus Boolean @default(false)
}

model AddressSubmission {
  id          String   @id @default(uuid())
  name        String?
  addressText String
  createdAt   DateTime @default(now())
}


